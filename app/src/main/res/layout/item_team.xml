<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Team Name -->
        <TextView
            android:id="@+id/teamNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Team Awesome"
            android:textSize="18sp"
            android:textColor="@color/text_primary"
            android:textStyle="bold"
            android:layout_marginBottom="4dp"/>

        <!-- Opportunity Name -->
        <TextView
            android:id="@+id/opportunityNameTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Congressional App Challenge"
            android:textSize="14sp"
            android:textColor="@color/accent"
            android:layout_marginBottom="8dp"/>

        <!-- Description -->
        <TextView
            android:id="@+id/teamDescriptionTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Looking for 2 more coders to build an education app"
            android:textSize="14sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp"
            android:maxLines="3"
            android:ellipsize="end"/>

        <!-- Team Info Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="8dp">

            <TextView
                android:id="@+id/membersTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2/4 members"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@android:drawable/ic_menu_myplaces"
                android:drawablePadding="4dp"/>

            <TextView
                android:id="@+id/statusBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OPEN"
                android:textSize="12sp"
                android:textColor="@android:color/white"
                android:background="@color/success"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:layout_marginStart="8dp"/>

        </LinearLayout>

        <!-- Skills Row -->
        <TextView
            android:id="@+id/skillsTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Skills: Coding, Design"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="12dp"
            android:visibility="gone"/>

        <!-- Action Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/actionButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Join Team"
            android:textSize="14sp"
            app:cornerRadius="8dp"
            style="@style/Widget.Material3.Button.OutlinedButton"/>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
