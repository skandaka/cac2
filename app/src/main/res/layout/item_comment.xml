<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/surface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="12dp">

        <!-- User Info, Grade, and Insight Type -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/userNameTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Anonymous Student"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/userGradeTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:text="Grade 11"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/verifiedBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="6dp"
                android:text="âœ“ VERIFIED"
                android:textSize="9sp"
                android:textColor="@android:color/white"
                android:background="@color/accent"
                android:paddingStart="5dp"
                android:paddingEnd="5dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/insightTypeBadge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TIP"
                android:textSize="10sp"
                android:textColor="@android:color/white"
                android:background="@color/accent"
                android:paddingStart="6dp"
                android:paddingEnd="6dp"
                android:paddingTop="2dp"
                android:paddingBottom="2dp"/>

        </LinearLayout>

        <!-- Rating Section -->
        <LinearLayout
            android:id="@+id/ratingLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:visibility="gone">

            <RatingBar
                android:id="@+id/commentRatingBar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:numStars="5"
                android:stepSize="1"
                android:isIndicator="true"
                style="?android:attr/ratingBarStyleSmall"
                android:scaleX="1.2"
                android:scaleY="1.2"/>

            <TextView
                android:id="@+id/ratingTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="8dp"
                android:text="5/5"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"/>

        </LinearLayout>

        <!-- Comment Text -->
        <TextView
            android:id="@+id/commentTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="This is the comment text. It can be multiple lines and contain helpful insights."
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:lineSpacingMultiplier="1.2"/>

        <!-- Resource Links Section -->
        <LinearLayout
            android:id="@+id/resourceLinksLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:background="@color/surface_variant"
            android:padding="8dp"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ðŸ“Ž Helpful Resources:"
                android:textSize="11sp"
                android:textColor="@color/text_secondary"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/resourceLinksTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="https://example.com/guide"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:autoLink="web"
                android:linksClickable="true"/>

        </LinearLayout>

        <!-- Timestamp and Actions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/timestampTextView"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="2 days ago"
                android:textSize="12sp"
                android:textColor="@color/text_hint"/>

            <TextView
                android:id="@+id/upvoteCountTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="5 helpful"
                android:textSize="12sp"
                android:textColor="@color/text_secondary"
                android:drawableStart="@android:drawable/star_on"
                android:drawablePadding="4dp"
                android:paddingStart="8dp"
                android:paddingEnd="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="?attr/selectableItemBackground"
                android:clickable="true"
                android:focusable="true"/>

            <TextView
                android:id="@+id/replyButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="12dp"
                android:text="Reply"
                android:textSize="12sp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:paddingStart="4dp"
                android:paddingEnd="4dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:background="?attr/selectableItemBackground"/>

            <ImageButton
                android:id="@+id/editButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="8dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_edit"
                android:contentDescription="Edit comment"
                android:visibility="gone"/>

            <ImageButton
                android:id="@+id/deleteButton"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginStart="4dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@android:drawable/ic_menu_delete"
                android:contentDescription="Delete comment"
                android:visibility="gone"/>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
