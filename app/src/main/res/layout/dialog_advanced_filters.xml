<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Category Filter -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_category"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/categoryFilterChipGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:singleSelection="true"
            android:layout_marginBottom="16dp">

            <com.google.android.material.chip.Chip
                android:id="@+id/chipAllCategories"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="All"
                android:checked="true"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilterCompetition"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Competition"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilterEmployment"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Employment"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilterVolunteering"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Volunteering"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilterClub"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Club"/>

            <com.google.android.material.chip.Chip
                android:id="@+id/chipFilterSummer"
                style="@style/Widget.MaterialComponents.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Summer Program"/>

        </com.google.android.material.chip.ChipGroup>

        <!-- Community Filters -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Community Filters"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/freeOnlySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_free_only"
            android:textSize="14sp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/virtualOnlySwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_virtual_only"
            android:textSize="14sp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/transitAccessibleSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_transit_accessible"
            android:textSize="14sp"/>

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/scholarshipAvailableSwitch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/filter_scholarship_available"
            android:textSize="14sp"/>

        <!-- Minimum Comments/Engagement -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Minimum Community Engagement"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Min. Comments:"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/minCommentsValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/minCommentsSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="50"
            android:stepSize="5"
            android:value="0"/>

        <!-- Minimum Students Enrolled -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="8dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/filter_students_enrolled"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/minStudentsValue"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="0+"
                android:textAlignment="textEnd"
                android:textSize="14sp"
                android:textStyle="bold"/>
        </LinearLayout>

        <com.google.android.material.slider.Slider
            android:id="@+id/minStudentsSlider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:valueFrom="0"
            android:valueTo="100"
            android:stepSize="10"
            android:value="0"/>

        <!-- Sort By -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/filter_sort_by"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/sortByRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RadioButton
                android:id="@+id/sortMostPopular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sort_most_popular"
                android:checked="true"/>

            <RadioButton
                android:id="@+id/sortMostCommented"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Most Commented"/>

            <RadioButton
                android:id="@+id/sortDeadline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sort_deadline"/>

            <RadioButton
                android:id="@+id/sortNewest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/sort_newest"/>
        </RadioGroup>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="24dp"
            android:gravity="end">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/clearFiltersButton"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/clear_filters"
                android:layout_marginEnd="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/applyFiltersButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/apply_filters"/>
        </LinearLayout>

    </LinearLayout>
</ScrollView>
